{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@src/(.*)": "<rootDir>/../src/$1",
    "@src": "<rootDir>/../src",
    "@app/db/(.*)": "<rootDir>/../libs/db/src/$1",
    "@app/db": "<rootDir>/../libs/db/src",
    "@app/otel/(.*)": "<rootDir>/../libs/otel/src/$1",
    "@app/otel": "<rootDir>/../libs/otel/src"
  }
}
